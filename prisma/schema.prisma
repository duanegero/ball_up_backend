generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum DrillType {
    shoot
    dribble
    pass
    reb_defence
    warmup
}

model Trainer {
    trainer_user_id  Int       @id @default(autoincrement())
    email            String    @unique
    username         String    @unique
    hash_password    String
    first_name       String
    last_name        String
    years_experience Int?
    bio              String?
    created_at       DateTime  @default(now())
    athletes         Athlete[]
    Drill            Drill[]

    @@map("trainers")
}

model Athlete {
    athlete_user_id Int      @id @default(autoincrement())
    email           String   @unique
    username        String   @unique
    hash_password   String
    first_name      String
    last_name       String
    age             Int
    level           Int
    created_at      DateTime @default(now())

    trainer_id Int?

    trainer         Trainer?          @relation(fields: [trainer_id], references: [trainer_user_id])
    Athlete_Session Athlete_Session[]

    @@map("athletes")
}

model Drill {
    drill_id        Int             @id @default(autoincrement())
    drill_type      DrillType
    description     String
    level           Int
    trainer_user_id Int?
    trainer         Trainer?        @relation(fields: [trainer_user_id], references: [trainer_user_id])
    created_at      DateTime        @default(now())
    Session_Drill   Session_Drill[]

    @@map("drills")
}

model Session {
    session_id      Int               @id @default(autoincrement())
    length          Int
    level           Int
    created_at      DateTime          @default(now())
    Athlete_Session Athlete_Session[]
    Session_Drill   Session_Drill[]

    @@map("sessions")
}

model Athlete_Session {
    athlete_user_id Int
    session_id      Int

    athlete Athlete @relation(fields: [athlete_user_id], references: [athlete_user_id])
    session Session @relation(fields: [session_id], references: [session_id])

    @@id([athlete_user_id, session_id])
    @@map("athlete_sessions")
}

model Session_Drill {
    session_id Int
    drill_id   Int

    session Session @relation(fields: [session_id], references: [session_id])
    drill   Drill   @relation(fields: [drill_id], references: [drill_id])

    @@id([session_id, drill_id])
    @@map("session_drills")
}
